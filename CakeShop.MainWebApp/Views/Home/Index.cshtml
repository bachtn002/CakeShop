@{
    ViewData["Title"] = "Home Page";
}
@using CakeShop.Service.Products.Service
@using CakeShop.Service.Products.Model

@model PagedResultProduct<ModelViewProduct>


@section header{
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="header__top__inner">
                            <div class="header__top__left">
                                <ul>
                                    <li>
                                        USD <span class="arrow_carrot-down"></span>
                                        <ul>
                                            <li>EUR</li>
                                            <li>USD</li>
                                        </ul>
                                    </li>
                                    <li>
                                        ENG <span class="arrow_carrot-down"></span>
                                        <ul>
                                            <li>Spanish</li>
                                            <li>ENG</li>
                                        </ul>
                                    </li>
                                    <li><a href="#">Sign in</a> <span class="arrow_carrot-down"></span></li>
                                </ul>
                            </div>
                            <div class="header__logo">
                                <a href="./index.html"><img src="/template/img/logo.png" alt=""></a>
                            </div>
                            <div class="header__top__right">
                                <div class="header__top__right__links">
                                    <a href="#" class="search-switch"><img src="/template/img/icon/search.png" alt=""></a>
                                    <!-- <a href="#"><img src="/template/img/icon/heart.png" alt=""></a> -->
                                </div>
                                <div class="header__top__right__cart">
                                    <a href="#"><img src="/template/img/icon/cart.png" alt=""> <span>0</span></a>
                                    <div class="cart__price">Cart: <span>$0.00</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="canvas__open"><i class="fa fa-bars"></i></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="active"><a asp-area="" asp-controller="home" asp-action="index">Home</a></li>
                            <li><a asp-area="" asp-controller="home" asp-action="about">About</a></li>
                            <li><a asp-controller="home" asp-action="products">Product</a></li>
                            <li>
                                <a href="#">Pages</a>
                                <ul class="dropdown">
                                    <li><a asp-controller="home" asp-action="shopdetails">Shop Details</a></li>
                                    <li><a asp-controller="home" asp-action="shoppingcart">Cart</a></li>
                                    <li><a asp-controller="home" asp-action="check-out">Check Out</a></li>
                                    <li><a asp-controller="home" asp-action="wiss-list">Wisslist</a></li>
                                </ul>
                            </li>
                            <li><a asp-controller="home" asp-action="blog">Blog</a></li>
                            <li><a asp-controller="home" asp-action="contact">Contact</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
}
@section slide{
    <section class="hero">
        <div class="hero__slider owl-carousel">
            <div class="hero__item set-bg" data-setbg="/template/img/hero/hero-1.jpg">
                <div class="container">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-8">
                            <div class="hero__text">
                                <h2>Making your first slide</h2>
                                <a href="#" class="primary-btn">Our cakes</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hero__item set-bg" data-setbg="/template/img/about-video.jpg">
                <div class="container">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-8">
                            <div class="hero__text">
                                <h2>Making your second slide</h2>
                                <a href="#" class="primary-btn">Our cakes</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


<!-- Categories Section Begin -->
<div class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                <div class="categories__item">
                    <div class="categories__item__icon">
                        <a href="https://www.facebook.com">
                            <span class="flaticon-029-cupcake-3"></span>
                            <h5>Cupcake</h5>
                        </a>
                    </div>
                </div>
                <div class="categories__item">
                    <div class="categories__item__icon">
                        <a href="https://www.facebook.com">
                            <span class="flaticon-034-chocolate-roll"></span>
                            <h5>Pancake</h5>
                        </a>
                    </div>
                </div>
                <div class="categories__item">
                    <div class="categories__item__icon">
                        <a href="https://www.facebook.com">
                            <span class="flaticon-005-pancake"></span>
                            <h5>Dorayaki</h5>
                        </a>
                    </div>
                </div>
                <div class="categories__item">
                    <div class="categories__item__icon">
                        <a href="https://www.facebook.com">
                            <span class="flaticon-030-cupcake-2"></span>
                            <h5>Biscuit</h5>
                        </a>
                    </div>
                </div>
                <div class="categories__item">
                    <div class="categories__item__icon">
                        <a href="https://www.facebook.com">
                            <span class="flaticon-006-macarons"></span>
                            <h5>Donut</h5>
                        </a>
                    </div>
                </div>
                <div class="categories__item">
                    <div class="categories__item__icon">
                        <a href="https://www.facebook.com">
                            <span class="flaticon-006-macarons"></span>
                            <h5>Cheesecake</h5>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Categories Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Items)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@Html.DisplayFor(Model=>item.ImageProduct)">
                            <div class="product__label">
                                <span>@Html.DisplayFor(Model=>item.NameProduct)</span>
                            </div>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">@Html.DisplayFor(Model => item.NameProduct)</a></h6>
                            <div class="product__item__price">@Html.DisplayFor(Model => item.ProductPrice)</div>
                            <div class="cart_add">
                                <a href="https://wwww.facebook.com/">Add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
<!-- Product Section End -->